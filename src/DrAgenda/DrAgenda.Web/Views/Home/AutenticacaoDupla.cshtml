@{
    Layout = null;
}
@model DrAgenda.Web.Models.Home.AutenticacaoDuplaViewModel

<!DOCTYPE html>
<html>
<head>

    <partial name="_Meta" />

    <partial name="_Styles" />

</head>
<body>

    <div class="row no-gutters min-h-fullscreen bg-white">
        <div class="col-md-6 col-lg-7 col-xl-8 d-none d-md-block bg-img" style="background-image: url(/img/bg_login.jpg)" data-overlay="5">

            <div class="row h-100 pl-50">
                <div class="col-md-10 col-lg-8 align-self-end">
                    <img src="/img/logo-light-lg.png" alt="...">
                    <br><br><br>
                    <h4 class="text-white">Sistema de processamento de infrações de trânsito</h4>
                    <p class="text-white">Pré-processamento, processamento, integrações e gestão de infrações de trânsito.</p>
                    <br><br>
                </div>
            </div>

        </div>

        <div class="col-md-6 col-lg-5 col-xl-4 align-self-center">
            <div class="px-80 py-30">
                <h4> Código de Confirmação </h4>
                <p><small> Informe o código recebido via SMS. </small></p>
                <br>
                <div asp-validation-summary="All"></div>
                <form class="form-type-material" method="post">
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="Codigo">
                        <label asp-for="Codigo" ></label>
                    </div>

                    <div class="row form-group col-12">

                        <div class="col-6">
                            <a asp-action="Login" class="btn btn-bold btn-block btn-default" > Voltar </a>
                        </div>

                        <div class="col-6">
                            <button class="btn btn-bold btn-block btn-primary" type="submit">Entrar</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>

    <partial name="_Scripts" />

</body>
</html>
