@{
    Layout = null;
}
@model DrAgenda.Web.Models.Home.LoginViewModel

<!DOCTYPE html>
<html>
<head>

    <partial name="_Meta" />

    <partial name="_Styles" />

</head>
<body>

    <div class="row no-gutters min-h-fullscreen bg-white">
        <div class="col-md-6 col-lg-7 col-xl-8 d-none d-md-block bg-img" style="background-image: url(/img/bg_login.jpg)" data-overlay="5">

            <div class="row h-100 pl-50">
                <div class="col-md-10 col-lg-8 align-self-end">
                    <img src="/img/logo-light-lg.png" alt="...">
                    <br><br><br>
                    <h4 class="text-white">Sistema de processamento de infrações de trânsito</h4>
                    <p class="text-white">Pré-processamento, processamento, integrações e gestão de infrações de trânsito.</p>
                    <br><br>
                </div>
            </div>

        </div>

        <div class="col-md-6 col-lg-5 col-xl-4 align-self-center">
            <div class="px-80 py-30">
                <h4>Entrar</h4>
                <p><small>Faça login em sua conta</small></p>
                <br>
                <div asp-validation-summary="All"></div>
                <form class="form-type-material" method="post">
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="Username">
                        <label asp-for="Username" />
                    </div>

                    <div class="form-group">
                        <input type="password" class="form-control" asp-for="Password">
                        <label asp-for="Password" />
                    </div>

                    <div class="form-group flexbox">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" checked asp-for="KeepConnected">
                            <label class="custom-control-label">Permanecer conectado</label>
                        </div>

                        <a class="text-muted hover-primary fs-13" href="#">Esqueceu a senha?</a>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-bold btn-block btn-primary" type="submit">Entrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <partial name="_Scripts" />

</body>
</html>
